<!DOCTYPE html>
<html>
<head>
	<title>Summary</title>
	<link rel="stylesheet" href="./stylesheets/app.css">
</head>
<body>
	<%const url = 'https://image.tmdb.org/t/p/w185'+poster;%>
	<h1> SocialScene </h1>
	<h2> Summary </h2>
	<table width="100%">
		<td>
			<button onclick="window.history.back()">Back to Search </button>	<!-- button back to results-->
		</td>
		<td style="text-align: right;">
			<button onclick="window.location.href='/user'">Back to Main </button><!-- button back to home -->
		</td>
	</table>
	<table class="display">
		<td style="min-width: 20%; text-align: center; align-items: center;">
			<%if(poster == ''){%>
				<img src = '/noimg.jpg'>
			<%}else{%>
				<img src= '<%=url%>'>
			<%};%>
			<p><%=title%></p>
		</td>
		<td style="padding-left: 20px">
			<!-- overview -->
			<%if(overview == ''){%>
				<p>Overview: N/A</p>
			<%}else{%>
				<p>Overview: <%=overview%></p>
			<%};%>
			<!-- poster -->
			<%if(date == ''){%>
				<p>Release Date: N/A</p>
			<%}else{%>
				<p>Release Date: <%=date%></p>
			<%};%>
			<!--  -->
			<table>
				<col width="130">
				<td>Ratings: <%=rating%>/10</td>
				<td>Votes: <%=vote%></td>
			</table>
			<%if(language == ''){%>
				<p>Original language: N/A</p>
			<%}else{%>
				<p>Original language: <%=language%></p>
			<%};%>
		</td>
	</table>



	<div >
	  <h3>Your Review</h3>
	  Title: <input align="center" style="text-align: center;" type="text" name="title" value='<%=title%>' disabled />
	  <br/>

	  <table>
	  <div > 
	  
		<br>
		<form action="/rateuser" method = "post">
		  Rating:<input align="center" type="number" name="rating" placeholder="Enter a rating between [0-10]" max="10" min="0" step="0.5" required>
		  <br>
		  <br>
		  Review: <br> <input type="text" name="review" style="width: 500px; height: 100px;">
		  <br>
		  <br>
		  <input type="hidden" name="id" value="<%=id%>">
  		  <input type="hidden" name="category" value="<%=category%>">
		  <input type="hidden" name="title" value="<%=title%>">
		  <button id="submitbutton" > Submit </button>
		</form>
	</div>
		
	  </div>
	</table>

</body>
</html>